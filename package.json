{
  "name": "schoolnika",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/Sir-Altruist/schoolnika.git",
  "author": "Sir_Altruist <eshooluwasegun98@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "cross-env nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "test": "mocha -r ts-node/register --extension ts --exit --timeout 10000 '__tests__/**/*.ts'",
    "build": "rimraf dist && tsc",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "prepare": "is-ci || husky install"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "lint-staged": {
    "*.{ts}": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "redis": "^4.6.7",
    "rimraf": "^5.0.1",
    "sequelize": "^6.32.1",
    "sequelize-bcrypt": "^1.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.5",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.9",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
